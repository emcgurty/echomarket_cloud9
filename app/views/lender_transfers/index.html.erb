<h1>Lender Transfers</h1>

<table>
  <thead>
    <tr>
      <th>Lender transfer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lender_transfers.each do |lender_transfer| %>
      <tr>
        <td><%= lender_transfer.lender_transfer_id %></td>
        <td><%= link_to 'Show', lender_transfer %></td>
        <td><%= link_to 'Edit', edit_lender_transfer_path(lender_transfer) %></td>
        <td><%= link_to 'Destroy', lender_transfer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

