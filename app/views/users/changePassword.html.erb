  <%= form_for :user, :url=> {:controller=>"users", :action => "change_password" }, :html=> {:class=>"login"} do |f| %>
  <%= f.hidden_field :reset_code, :value => params[:id].nil? ?  params[:id] = session[:reset_code] : params[:id] %>

      <div  class="top" id="form_change_password]">
        <table style="width:75%;margin-left: 50px" align="center" id="change_password_table">
          <tr >
            <td style="padding-top: 15px;padding-bottom: 15px;">
              <span>Change User Password</span>
              <% f.submit "Accept New Password" %>
            </td>
          </tr> 
          <tr >
            <td style="padding-top: 15px;padding-bottom: 15px;">

              <%= f.label :username %>
              <%= f.text_field :username %>
            </td>
          </tr>
          <tr>
            <td style="padding-top: 15px;padding-bottom: 15px;">
            <%= f.label :password %>
            <%= f.password_field :password %>
            </td>
          </tr>
          <tr>
            <td style="padding-top: 15px;padding-bottom: 15px;">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation %>
            </td>
          </tr>
        </table>
      </div>
    <% end %>
